 #parse( 'global/header.vm' )
 ${userInfo}
<head>
<meta charset="utf-8" />
 <!--允许全屏-->
  <meta content="yes" name="apple-mobile-web-app-capable" />
  <meta content="yes" name="apple-touch-fullscreen" />
  <meta content="telephone=no,email=no" name="format-detection" />
  <title></title>
  <script type="text/javascript" src="$static_resource/js/tpl.js"></script>
  <link href="$static_resource//css/userDetail.css" rel="stylesheet" type="text/css"/>
</head>
<body >
<div id="baseInfoVue">
        <div class="head-section">
            <div class="active-but">
				活动
            </div>
            <div class="rp">
				人品${userInfo.pariseRate}
            </div>
            <div class="head-info-warp">
                <div class="info-base-warp">
                    <div class="icon-warp">
                        <img class="right-img" src="${userInfo.dbUsers.headIcon}"/>
                        <img class="right-icon" src="$static_resource/image/right-icon.png"/>
                    </div>
                    <div class="label-warp">
                        <img class="icon label-left-icon" src="$static_resource/image/info-left-name-icon.png"/>
                        <img class="icon label-right-icon" src="$static_resource/image/info-left-name-icon.png"/>
                    </div>
                    <div class="name-warp">
                        <span class="name">${userInfo.dbUsers.nickName}</span>
                        <div><span class="fm">
								#if ($userInfo.dbUsers.sex==1)
							    ♂
								#else
								♀
								#end
						</span>  ${self.getAge(${userInfo.dbUsers.birthday})} 岁   ${self.getConstellation(${userInfo.dbUsers.birthday})}</div>
                    </div>
                    <div class="info-intr">${dict.getInterest(${userInfo.dbUsers.interest})}</div>
                  ##  <div class="info-intr">数据显示/旅行</div>
                  ##  <div class="info-intr">数据显示/旅行</div>
                  ##  <div class="info-fri-warp">
                  ##      <div class="info-fri">8个共同好友</div>
                  ##  </div>
                </div>
            </div>







            <div class="line-title-warp">
                <div class="line"></div>
                <div class="line-title">线下好评率${userInfo.userPariseRate}</div>
            </div>

            <div class="cor-warp">
                	
				#foreach($item in $userInfo.praiseList)
    				#if($item.appraiseType==300)	
    					<div class="cor-icon-warp bad-cor">
    				#else
    					<div class="cor-icon-warp ">
    				#end	
                    <div class="cor-icon">
						${item.appraiseType}
                    </div>
                    <div class="cor-icon-num">
                        ${item.count}
                    </div>
                </div>
				#end
				
				
            </div>
<!--
            <div class="nocor-warp">
                <img class="nocor-warp-img" src="$static_resource/image/nocor-warp-img.png" alt=""/>
                <div class="nocor-warp-text">额...还没有人对TA评价过...</div>


            </div>
-->




        </div>


    <div class="rec-text">${userInfo.dbUsers.signature}</div>
	
	 	
	#foreach($item in $userInfo.shows)
		<div class="box-warp">
        <div class="box-info-up">
            <img class="up-icon" src="${userInfo.dbUsers.headIcon}"/>

            <div class="up-right-warp">
                <div class="image-title">${item.signature}</div>
                <ul class="up-image-list">
					
					#if($!{item.mediaContent} && $item.mediaContent ne '') ##判断不为空
						#foreach ($element in $item.mediaContent.split(","))
							<img class="img-li" src="$element"/>
						#end
                    #end

					<div class="fx"></div>
                </ul>
                <div class="up-time">
 				   ${self.getDateSection(${item.ctime})}
                </div>
            </div>
        </div>
        <div class="box-info-down">

            <div class="down-left">
               ...
            </div>
            <div class="down-right">
                <span class="zan-num">${item.countPraise}</span>
                <img class="zan-img" src="$static_resource/image/zan.png"/>
            </div>
        </div>
    </div>
	#end

    </div>






</body>
</html>
