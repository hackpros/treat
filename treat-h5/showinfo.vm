#parse('global/header.vm')
  <head>
   <meta charset="utf-8" />
     <!--允许全屏-->
     <meta content="yes" name="apple-mobile-web-app-capable" />
     <meta content="yes" name="apple-touch-fullscreen" />
     <meta content="telephone=no,email=no" name="format-detection" />
     <title></title>
  	<link href="$static_resource/css/shareDetail.css" rel="stylesheet" type="text/css" />
 </head>
<body>
<div id="baseInfoVue">
    <div class="box-warp">
        <div class="box-info-up">
            <img class="up-icon" src="${showInfo.headIcon}"/>
            <div class="up-right-warp">
                <div class="image-title">${showInfo.signature}</div>
            </div>
        </div>
        <div class="box-info-down">

            <div class="down-left">
			   ${self.getDateSection(${showInfo.ctime})}
            </div>
            <div class="down-right">
                <span class="zan-num">${showInfo.countPraise}</span>
                <img class="zan-img" src="$static_resource/image/zan.png"/>
            </div>
        </div>
    </div>

    <div class="img-warp">
        <ul class="img-ul">
			
				#if($!{showInfo.mediaContent} && $showInfo.mediaContent ne '') ##判断不为空
						#foreach ($element in $showInfo.mediaContent.split(","))
							<li style="background-image: url(${element})"></li>
						#end
				#end
				
            <div class="fx"></div>
        </ul>
    </div>

</div>
</body>
</html>



